<div class="form">
<div id="message_status"></div>
<%= form_for @message, :url => bigos_contact_box.messages_path do |form| %>
    <fieldset class="fields">
      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
      </div>
      <div class="field">
        <%= form.label :subject %>
        <%= form.text_field :subject %>
      </div>

      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body %>
      </div>
    </fieldset>

    <fieldset class="actions">
      <%= form.submit "Send", id: "bigos_contact_form_submit" %>
    </fieldset>
<% end %>
</div>
<%= hidden_field_tag :marker_icon, asset_path( BigosSettings::Settings.contact_marker_icon_src) unless  BigosSettings::Settings.contact_marker_icon_src.blank? %>
<%= hidden_field_tag :map_zoom,  BigosSettings::Settings.contact_map_zoom unless  BigosSettings::Settings.contact_map_zoom.blank? %>
<%= hidden_field_tag :latitude,  BigosSettings::Settings.contact_location.first %>
<%= hidden_field_tag :longitude,  BigosSettings::Settings.contact_location.second %>
<%= hidden_field_tag :location_name,  BigosSettings::Settings.contact_location_name %>
<%= hidden_field_tag :invalid_fields_error,  BigosSettings::Settings.contact_invalid_fields_error %>
<div id="contact-box-map-canvas" style="width:400px; height: 400px">
</div>
